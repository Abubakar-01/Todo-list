<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle%></h1>
    </div>
    <div class="box">
        <% newItems.forEach((value)=>{ %>
        <form action="/delete" method="post">
        <div  class="item">
          <input type="checkbox" name="checkbox" value="<%=value._id%>" onchange="this.form.submit()">
          <p><%= value.name%></p>
        </div>
        <input type="hidden" name="list" value="<%=listTitle%>"> 
    </form>
        <%})%>
        
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add new Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle%>">+</button>
        </form>
    </div>
    
    <%- include("footer") -%>
